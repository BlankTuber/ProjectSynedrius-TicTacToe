        <h1>Tic-Tac-Toe Game</h1>
        <div id="game">
            <table border="1" id="tttable">
                <tr>
                    <td class="tttcell" data-row="0" data-col="0"></td>
                    <td class="tttcell" data-row="0" data-col="1"></td>
                    <td class="tttcell" data-row="0" data-col="2"></td>
                </tr>
                <tr>
                    <td class="tttcell" data-row="1" data-col="0"></td>
                    <td class="tttcell" data-row="1" data-col="1"></td>
                    <td class="tttcell" data-row="1" data-col="2"></td>
                </tr>
                <tr>
                    <td class="tttcell" data-row="2" data-col="0"></td>
                    <td class="tttcell" data-row="2" data-col="1"></td>
                    <td class="tttcell" data-row="2" data-col="2"></td>
                </tr>
            </table>
        </div>
        <script src="/socket.io/socket.io.js"></script>
